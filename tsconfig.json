{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"lib": ["ESNext"],
		"noEmitHelpers": true,
		"importHelpers": true,

		"types": [
			"webpack-env",
			"jest"
		],

		"baseUrl": "./src",
		"outDir": "./dist"
	},

	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"target": "ES6",
			"module": "CommonJS"
		},
	},

	"compileOnSave": false,

	"include": [
		"src/**/*"
	]
}
