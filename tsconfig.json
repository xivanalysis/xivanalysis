{
	"compilerOptions": {
		"baseUrl": "./src",
		"noEmit": true,

		"strict": true,

		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",

		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"jsx": "preserve",
		"experimentalDecorators": true,

		"noErrorTruncation": true,

		"types": [
			"webpack-env",
			"jest"
		]
	},
	"include": ["src/**/*"]
}
