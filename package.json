{
  "name": "@xivanalysis/client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "test": "jest",
    "lint": "yarn run lint:js && yarn run lint:ts",
    "lint:js": "eslint src",
    "lint:ts": "tslint src/**/*.ts{,x}",
    "extract": "rimraf locale/_build && rimraf locale/en && lingui add-locale en && cross-env NODE_ENV=development lingui extract --clean",
    "compile": "lingui compile",
    "generate": "yarn run generate:unable-to-act",
    "generate:unable-to-act": "ts-node -s ./scripts/generate-unable-to-act"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js{,x}": [
      "eslint --fix"
    ],
    "src/**/*.ts{,x}": [
      "tslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lingui": {
    "srcPathDirs": [
      "src"
    ],
    "fallbackLocale": "en",
    "sourceLocale": "en",
    "format": "minimal"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "dependencies": {
    "@lingui/react": "^2.5.0",
    "@sentry/browser": "^5.6.3",
    "@xivanalysis/tooltips": "^0.1.3",
    "chart.js": "^2.7.2",
    "classnames": "^2.2.6",
    "color": "^3.0.0",
    "d3-scale": "^3.2.1",
    "d3-time": "^2",
    "d3-time-format": "^3",
    "es6-error": "^4.1.1",
    "intersection-observer": "^0.11",
    "intl": "^1.2.5",
    "ky": "^0.24",
    "lodash": "^4.17.13",
    "mathjs": "^7",
    "mobx": "^5.10.1",
    "mobx-react": "^6.1.3",
    "prop-types": "^15.6.1",
    "react": "^16.8.0",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.8.0",
    "react-helmet": "^6",
    "react-markdown": "^4",
    "react-measure": "^2.3.0",
    "react-popper": "^1.3.7",
    "react-router-dom": "^5.0.0",
    "react-use-gesture": "^7.0.5",
    "react-window": "^1.8.6",
    "reflect-metadata": "^0.1.12",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-react": "^1",
    "stable": "^0.1.8",
    "toposort": "^2",
    "tslib": "^2",
    "url-search-params-polyfill": "^8",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@kobold/core": "^0.0.1",
    "@kobold/excel": "^0.0.2",
    "@kobold/xiv": "^0.0.1",
    "@types/chart.js": "^2.7.37",
    "@types/classnames": "^2.2.6",
    "@types/color": "^3.0.0",
    "@types/d3-scale": "^2.2.0",
    "@types/d3-time": "^2",
    "@types/d3-time-format": "^2.1.1",
    "@types/jest": "^26",
    "@types/lingui__core": "^2.7.0",
    "@types/lingui__macro": "^2.7.3",
    "@types/lingui__react": "^2.5.2",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "^6.0.0",
    "@types/react-measure": "^2.0.6",
    "@types/react-router-dom": "^5",
    "@types/react-scroll": "^1.5.4",
    "@types/react-window": "^1.8.2",
    "@types/webpack-env": "^1.13.6"
  }
}
